{
    "clangd.fallbackFlags": [
        "-std=c++20"
    ],
    "rust-analyzer.checkOnSave.enable": true,
    "codeLens.enable": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "lua",
        "r",
        "css",
        "svelte",
        "css",
        "html",
        "lua",
        "c",
        "json",
        "rust",
        "dart",
        "html",
        "python",
        "typescript",
        "typescriptreact",
        "javascript"
    ],
    "languageserver": {
        "ocaml": {
            "command": "~/.opam/default/bin/ocamllsp",
            "filetypes": [
                "ocaml"
            ]
        },
        "lua": {
            "command": "~/dev/lsp/lua/bin/lua-language-server",
            "filetypes": [
                "lua"
            ]
        },
        "nim": {
            "command": "nimlsp",
            "filetypes": [
                "nim"
            ]
        },
        "arduino": {
            "command": "~/dev/arduino/arduino-language-server/arduino-language-server",
            "rootPatterns": [
                "*.ino"
            ],
            "filetypes": [
                "arduino"
            ],
            "args": [
                "-cli",
                "arduino-cli",
                "-clangd",
                "clangd",
                "-cli-config",
                "~/dev/arduino/arduino-cli.yaml"
            ]
        },
        "R": {
            "command": "/usr/bin/R",
            "args": [
                "--slave",
                "-e",
                "languageserver::run()"
            ],
            "filetypes": [
                "r"
            ]
        }
    },
    "svelte.enable-ts-plugin": true
}
